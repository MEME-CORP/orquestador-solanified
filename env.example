# SUPABASE CONFIGURATION
# Copy this file to .env and replace the placeholder values with your actual Supabase credentials

# Your Supabase project URL (found in Project Settings > API)
SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key (found in Project Settings > API)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# PostgreSQL connection (if using direct connection)
# DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres
# SUPABASE_DB_PASSWORD=your-db-password

# EXTERNAL API CONFIGURATION
# Base URL for the blockchain primitives API
EXTERNAL_API_BASE_URL=https://rawapisolana-render.onrender.com:1000

# API key for the external blockchain API (if required)
EXTERNAL_API_KEY=your-api-key-here

# FRONTEND CONFIGURATION
# Frontend URL for sending notifications
FRONTEND_URL=https://frontend-solanified.vercel.app

# SERVER CONFIGURATION
# Port for the orchestrator API to run on
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# SECURITY CONFIGURATION
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# RATE LIMITING
# Maximum requests per window (default: 100 per 15 minutes)
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
